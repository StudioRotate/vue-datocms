{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "commonjs",
    "noImplicitAny": true,
    "lib": ["es2017", "es7", "es6", "dom"],
    "outDir": "./dist",
    "target": "es3",
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "types": ["node", "@types/jest"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}